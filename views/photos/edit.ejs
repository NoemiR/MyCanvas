	<h1>Edit Canvas Content</h1>

	<div class="container">

		<% for (let i = 0; i < user.photos.length; i++ ) {%>
		
			<form action='/photos/<%=user.photos[i]._id%>?_method=PUT' method	="POST">
				
				<div class="form-group">
					<label>Image Source: </label>
					<input type="text" name="url" class="	form-control" id="exampleInputEmail" value="<%=	user.photos[i].url%>" />
				</div>
				<div class="form-group">
					<label>Image Title: </label>
					<input type="text" name="title" class="	form-control" id="exampleInputEmail" value="<%=	user.photos[i].title%>" />
				</div>
				<div class="form-group">
					<label>Image Description: </label>
					<input type="text" name="description" class="	form-control" id="exampleInputEmail" value="<%=	user.photos[i].description%>"/>
					<label>Make this photo private: </label>
					<input type="checkbox" name="private">
				</div>
				<button type="Submit" class="btn btn-dark">Edit Photo</button>	
			</form>
			<form action="/photos/<%=user.photos[i]._id%>?_method=DELETE" method="POST">
					<button>Delete This Photo</button>
				</form>
		<%}%>

